<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.microlecturevideo.main.mvp.activity.weikevideo.activity.ExerciseWebActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21a574"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/execrise_web_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_v" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="@string/textView1"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/execrise_web_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textView15"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
    <ExpandableListView
        android:id="@+id/execrise_web_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:dividerHeight="5dp"
        android:groupIndicator="@drawable/ic_arrow_drop_down_circle_black_24dp"
        />


</LinearLayout>
