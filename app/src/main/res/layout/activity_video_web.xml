<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.microlecturevideo.main.mvp.activity.weikevideo.activity.VideoWebActivity">

    <LinearLayout
        android:id="@+id/laypou_video_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21a574"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_web"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_v" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="@string/textView12"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_web_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_get_app_black_24dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/videolayout_web"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <VideoView
            android:id="@+id/videoview_web"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:id="@+id/layout_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_web_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:src="@drawable/ic_play_arrow_black_24dp" />

            <TextView
                android:id="@+id/time_current_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekbae_web"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/seekbae_web"
                android:layout_toStartOf="@+id/seekbae_web"
                android:layout_weight="1"
                android:text="00:00:00"
                android:textColor="#ff2500" />

            <SeekBar
                android:id="@+id/seekbae_web"
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_above="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:indeterminate="false"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/seekbar_style2"
                android:thumb="@null" />

            <TextView
                android:id="@+id/time_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekbae_web"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@+id/seekbae_web"
                android:layout_toRightOf="@+id/seekbae_web"
                android:layout_weight="1"
                android:hint="1"
                android:text="00:00:00"
                android:textColor="#ff2500" />

            <ImageView
                android:id="@+id/img_web_magnify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/time_total_tv"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_zoom_out_map_black_24dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#222222"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="共"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView_count_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="讲"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="￥"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/web_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="20.00"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/web_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/videoweb_activity_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:gravity="center"
                android:src="@drawable/ic_down"
                android:text="￥"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/videoweb_activity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="下载"
                android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/feamelayout_web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="13.41" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/gray"
        android:gravity="center">

        <TextView
            android:id="@+id/free_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/textView13"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/charge_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/textView14"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
