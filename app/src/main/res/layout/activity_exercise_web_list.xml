<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.microlecturevideo.main.mvp.activity.weikevideo.activity.ExerciseWebListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21a574"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/execrise_web_list_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_v" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/textView1"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
    <me.maxwin.view.XListView
        android:id="@+id/execrise_web_list_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />
</LinearLayout>
